    <ListPreference
        android:defaultValue="1"
        android:entries="@array/pref_list_language"
        android:entryValues="@array/pref_list_language_values"
        android:key="language_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_change_language"/>

    <ListPreference
        android:defaultValue="1"
        android:entries="@array/pref_list_colors"
        android:entryValues="@array/pref_list_color_values"
        android:key="color_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_change_color"/>

</PreferenceScreen>
