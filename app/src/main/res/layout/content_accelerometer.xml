<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_accelerometer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingTop="65dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.g10.lemur.Accelerometer.Accelerometer"
    tools:showIn="@layout/activity_accelerometer">


    <android.support.v7.widget.CardView
        android:id="@+id/cardviewXData"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        app:cardCornerRadius="2dp"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/squared_symbolX"
            android:textColor="#ffffff"
            android:background="#455A64"
            android:textSize="17sp"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:id="@+id/mtextViewXTitle"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/smartphonexaxis"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="9.5"
            android:textSize="75sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="40dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cardviewXGraph"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:cardCornerRadius="2dp"
        android:layout_below="@+id/cardviewXData"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/graph"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardviewYData"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        app:cardCornerRadius="2dp"
        android:layout_below="@+id/cardviewXGraph"
        android:layout_marginTop="5dp"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/squared_symbolY"
                android:textColor="#ffffff"
                android:background="#546E7A"
                android:textSize="17sp"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:id="@+id/mtextViewYTitle"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardviewYGraph"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        app:cardCornerRadius="2dp"
        android:layout_below="@+id/cardviewYData"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/graph"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardviewZData"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        app:cardCornerRadius="2dp"
        android:layout_below="@+id/cardviewYGraph"
        android:layout_marginTop="5dp"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/squared_symbolZ"
                android:textColor="#ffffff"
                android:background="#607D8B"
                android:textSize="17sp"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:id="@+id/mtextViewYZitle"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardviewZGraph"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        app:cardCornerRadius="2dp"
        android:layout_below="@+id/cardviewZData"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/graph"/>
    </android.support.v7.widget.CardView>
</RelativeLayout>
</ScrollView>